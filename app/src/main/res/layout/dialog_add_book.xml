<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">
    <RelativeLayout
        android:id="@+id/bg_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar"
            android:id="@+id/toolbar"/>
        <android.support.v7.widget.CardView
            android:layout_below="@id/toolbar"
            android:layout_width="160dp"
            android:layout_height="206dp"
            android:layout_margin="@dimen/big_spacing"
            app:cardCornerRadius="0dp"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/img_iv"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/book_"/>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/bg_rl"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f9f4">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:padding="@dimen/sub_big_spacing">
                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#494949"
                    android:textSize="22sp"
                    tools:text="第一行代码：Android（第二版）"/>
                <TextView
                    android:id="@+id/author_tv"
                    android:layout_marginTop="@dimen/small_spacing"
                    android:textColor="#9b9b9b"
                    tools:text="作者：郭霖"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/publisher_tv"
                    android:layout_marginTop="@dimen/s_small_spacing"
                    android:textColor="#9b9b9b"
                    tools:text="出版社：人民邮电出版社"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/pubdate_tv"
                    android:layout_marginTop="@dimen/s_small_spacing"
                    android:textColor="#9b9b9b"
                    tools:text="出版时间：2016-11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4">
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:contentPadding="@dimen/sub_big_spacing"
                    android:layout_margin="@dimen/sub_big_spacing"
                    app:cardElevation="@dimen/small_spacing">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/douban_score"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#9b9b9b"
                            android:textSize="@dimen/medium_small_text"/>
                        <TextView
                            android:id="@+id/score_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#494949"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/big_spacing"
                            tools:text="9.0"/>
                        <me.zhanghai.android.materialratingbar.MaterialRatingBar
                            android:id="@+id/rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="18dp"
                            android:maxHeight="18dp"
                            app:mrb_progressTint="#ffac2d"
                            app:mrb_secondaryProgressTint="#ffac2d"
                            android:layout_gravity="center_horizontal"
                            style="@style/Widget.MaterialRatingBar.RatingBar" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            android:src="@drawable/ic_check"
            android:layout_marginLeft="@dimen/medium_spacing"
            android:layout_marginRight="@dimen/medium_spacing"
            android:layout_marginBottom="14dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>